{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build && cd server && npm install"
  },
  "deploy": {
    "startCommand": "cd server && node server.js",
    "restartPolicyCondition": "on-failure",
    "restartPolicyMaxRetries": 5
  }
}
